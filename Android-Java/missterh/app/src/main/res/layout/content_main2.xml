<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.maksimov.missterh.Main2Activity"
    tools:showIn="@layout/activity_main2">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Телефон"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tel"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_marginTop="30dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_tel"
            android:layout_weight="0.1"
            android:background="@drawable/edittextstyle"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/dov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Доверенное лицо(фамилия)"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editText_dov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.1"
            android:background="@drawable/edittextstyle"
            android:ems="10"
            android:gravity="center"
             />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Телефон доверенного лица"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/tel_dov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.1"
            android:background="@drawable/edittextstyle"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            />

        <Button
            android:text="Сохранить"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_id"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:onClick="onZareg" />

        <Button
            android:text="Закрыть и проверить данные "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:onClick="Closes" />
    </LinearLayout>
</RelativeLayout>
